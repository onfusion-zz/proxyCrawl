extends partials/layout

block vars
	- const title = 'Amazon Crawl';
	- const pageID = 'index';
	- const gitUrl = 'https://github.com/proxycrawl/proxycrawl-frontend-interview-test';

block eod
	script
		+loadModule('pages/index.js')

block header
	header
		include partials/navbar
	

block content
	main
		section
			.container
				header.text-center
					h1 Fetch Product Content
					p Enter your ProxyCrawl Token after singup. Get the desired product link/URL from Amazon online store and paste it in the form below.
						br
						| Hit on the Submit button it will take awhile and redirect to you the detail page.
			
				form(class="shadow-sm" method="POST" action="/product")
					.row(class="align-items-end mt-3")
						.col(class="col-sm-3")
							label(class="form-label") Token
							input.form-control(class="form-control" name="token" type="text" required placeholder="Enter Your Token")

						.col(class="col-sm-6")
							label(class="form-label") URL
							input.form-control(class="form-control" name="url" type="url" required placeholder="Product URL")

						.col(class="col-sm-3")
							input(class="btn btn-dark w-100" type="submit" value="Submit")
							input(class="btn btn-link btn-rest" type="reset" value="Reset")

					//- Help Text
					div(class="form-text mt-3")
						strong Example:
						small(class="d-block")
							samp https://www.amazon.com/Acer-R240HY-bidx-23-8-Inch-Widescreen/dp/B0148NNKTC
		